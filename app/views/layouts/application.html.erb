<!DOCTYPE html>
<html>
<head>
  <title>Gemnotifier</title>
  <%= stylesheet_link_tag 'reset', 'style' %>
  <%= csrf_meta_tag %>
</head>
<body>

    <div id="head">
        <div class="wraper">
            <a href="/" id="logo">GemNotifier</a>
            <div id="signedin_box">
                <a href="/browse">Browse</a>
                <% if current_user %>
                    <a href="/mygems">My Gems</a><a href="/sign_out">SignOut</a>
                <% end %>
            </div>
        </div>
        <a id="intridea_peel" href="http://intridea.com"><img src='/images/intridea_peel.png'></a>
    </div>
    <div id="content">
        <div class="wraper">
            <% if flash[:notice] || flash[:error] %>
                <div id="flash">
                    <% if flash[:notice] %>
                        <p class="notice"><%= flash[:notice] %></p>
                    <% end %>
                    <% if flash[:error] %>
                        <p class="error"><%= flash[:error] %></p>
                    <% end %>
                </div>
            <% end %>
            <%= yield %>
        </div>
    </div>
    <div id="foot">
        <div class="wraper">
            <p>
                2011 &copy;  Product of <a href="http://intridea.com">Intridea</a> Inc, built by <a href="http://twitter.com/uiicor">Roc Yu</a>
                <br/>
                Logo Credit: <a href="http://twitter.com/#!/mbleigh">Micheal Bleigh</a>
                <br />
                Source Code: <a href="https://github.com/intridea/gemnotifier">Github</a>
            </p>
            <a id="incubator" href="http://intridea.com"><img src="/images/gemnotifier_incubator.png"/></a>
            <div class="clear"></div>
        </div>
    </div>
    <script type="text/javascript" charset="utf-8">
        <% if current_user %>
            var logged_in = true;
        <% else %>
            var logged_in = false;
        <% end %>
    </script>
    <%= javascript_include_tag :defaults %>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-22969531-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
</body>
</html>
