<div class="gem_item">
    <div class="field">
        <label>Gem Name</label> <span><%= @gem_item.name %></span>
    </div>
    <div class="field">
        <label>Info</label><span><%= @gem_item.info %></span>
    </div>
    <div class="field">
        <label>Authors</label><span><%= @gem_item.authors %></span>
    </div>
    <div class="field">
        <label>Version</label><span><%= @gem_item.version %></span>
    </div>
    <div class="field">
        <label>Subscribe Count</label><span><%= @gem_item.subscribed_count %></span>
    </div>
    <div class="field">
        <label>Total downloads</label><span><%= @gem_item.downloads %></span>
    </div>
    <div class="links">
        <%= link_to 'Homepage', @gem_item.homepage_uri %> | 
        <%= link_to 'Project', @gem_item.project_uri %> | 
        <%= link_to 'Wiki', @gem_item.wiki_uri %> | 
        <%= link_to 'Documentation', @gem_item.documentation_uri %> | 
        <%= link_to 'SouceCode', @gem_item.source_code_uri %>
    </div>
    <div class="field">
        <% if current_user && current_user.subscribed?(@gem_item) %>
            <input type='button' id="unsubscribe_btn" rel="<%= @gem_item.id %>" value="Unsubscribe"></input>
        <% else %>
            <input type='button' id="subscribe_btn" rel="<%= @gem_item.id %>" value="Subscribe"></input>
        <% end %>
    </div>
</div>